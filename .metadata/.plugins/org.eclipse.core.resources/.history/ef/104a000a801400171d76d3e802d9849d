//Crossfire Assignment 3 Main C file

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "CrossfireA3Head.h"

//Main Function
int  main()
{
	setbuf(stdout, NULL);

	//Set number of players and slots to zero
	Num_Players = 0;
	Num_Slots = 0;

	int min_slots;

	//Print a welcome
	printf("|| Welcome to Crossfire ||\n");

	//Get number of players
	getNumInRange(1, 2, 6);

	min_slots = Num_Players;
	printf("Number of players = %d\n", min_slots);
	//Get number of slots
	getNumInRange(2,min_slots, 20);
	return 0;
}
